<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>LightVel.ua</title>
	<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
	<script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
	<link href='https://fonts.googleapis.com/css?family=Comfortaa&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Andika&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>
	<style type="text/css">
	
	@charset "utf-8";


body {
	line-height: 1;
	margin: 0;
	padding: 0;
	min-width: 670px;
font-family: 'Comfortaa', cursive;
}
ol, ul {
	list-style: none;
}
blockquote, q {
	quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
	content: '';
	content: none;
}
table {
	border-collapse: collapse;
	border-spacing: 0;
}

	#background{
		width: 100%;
		height: 100%;
		position: absolute;
		background-image: url(333.jpg);
	}

	#overlay{
		width: 100%;
		height: 100%;
		position: absolute;
		background: #000;
		opacity: 0;
	}
	#window{
		width: 500px;
		height: 200px;
		background: rgba(0,0,0,0.65);
		position: absolute;
		top: 12%;
		left: 0;
		border-left: 5px solid #ccc;
		font-family: 'Andika', sans-serif;
		//margin-left: -15%;
		//border: 2px solid #aaa;
		//box-shadow: 1px 1px 50px 13px #000;
	}
	#button{
		display: none;
		width: 20%;
		position: absolute;
		left: 50%;
		margin-left: -9.8%;
		top: 60%;
		height: 40px;
		background:linear-gradient(to top, #686868, #F0F0F0);
		border: 0;
		box-shadow: 3px 3px 25px -2px #000;
		cursor: pointer;
	}
	#window p{
		color: #fff;
		font-size: 3.5vw;
		margin: 20px;
		font-family: 'Comfortaa', cursive;
	}
	#window:hover{
		background: rgba(0,0,0,0.6);
		//outline: 1px solid #ccc;
	}

	#window p span{
		font-family: 'Comfortaa', cursive;
		color: red;
	}

	#timeline{
		font-family: 'Andika', sans-serif;
		font-size: 20px;
		color: #fff;
		float: right;
		margin: 20px;
	}
	#footer{
		height: 24px;
		width: 100%;
		background:linear-gradient(to top, #000, #2F2F2F);
		position: fixed;
		bottom: 0;
		border-top: 1px solid #ccc;
		padding-bottom: 15px;
		//padding-top: -5px;
	}
	#footer p{
		color: #fff;
		font-family: Verdana, Calibri;
		font-size: 14px;
		margin-left: 20px;
		//vertical-align: middle;
		margin-bottom: 2px;
		font-family: 'Andika', sans-serif;
	}
	#footer a{
		float: right;
		color: #3C93CB;
		font-size: 16px;
		margin-right: 20px;
		text-decoration: none;
		display: inline-block;
		font-family: 'Andika', sans-serif;
	}
	#footer a:hover{
		color: #fff;
	}
	
	</style>
</head>
<body>
	 

<div id="background"></div>
<div id="overlay"></div>
<div id="window">
	<p><span>335</span> горобчиків</p>
	<h4 id="timeline"></h4>
</div>
<div id="footer">
	<p>Сайт розроблено студією Microsoft. Деталі за посиланням справа.  <a onclick="ups()">Microsoft</a></p>
	
</div>


 <script> 






var montharray=new Array("Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec");
function countup(yr,m,d,h,min,sec) {
var today=new Date();
var todayy=today.getYear();
 
if ((navigator.appName == "Microsoft Internet Explorer") && (todayy < 2000))        
todayy="19" + todayy;
if (navigator.appName == "Netscape")
todayy=1900 + todayy;
 
var todaym=today.getMonth();
var todayd=today.getDate();
var todayh=today.getHours();
var todaymin=today.getMinutes();
var todaysec=today.getSeconds();
var todaystring=montharray[todaym]+" "+todayd+", "+todayy;
var paststring=montharray[m-1]+" "+d+", "+yr;
var difference=(Math.round((Date.parse(todaystring)-Date.parse(paststring))/(24*60*60*1000))*1);
//alert(difference + " дней");

var novTime=todayh+" "+todaymin+" "+todaysec;
var pastTime=h+" "+min+" "+sec;
var difhours=todayh-h;
var difmin=todaymin+min;
var difsec=todaysec-sec;


if (difsec < 0) {
	difsec + 60;
	return difsec;
}

var difTime="За період: " + difference + " Днів " + difhours + " Годин " + difmin + " Хвилин " + difsec + " Секунд";
document.getElementById("timeline").innerHTML = difTime;
}
countup(2015,6,29,0,0,0);
setInterval("countup(2015,6,29,0,0,0);",1000);


function ups(){
alert("Упс..");
}
 </script>
</body>
</html>